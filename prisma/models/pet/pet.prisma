model Pet {
    id   Int     @id @default(autoincrement()) /// 아이디
    type PetType /// 애완동물 타입
    name String  @db.VarChar(100) /// 애완동물 이름
    age  Int     @default(0) /// 애완동물 나이

    owner      User          @relation(fields: [ownerId], references: [id])
    category   Category?     @relation(fields: [categoryId], references: [id])
    tag        Tag?          @relation(fields: [tagId], references: [id])
    activities PetActivity[] /// 펫 활동 기록들

    ownerId    Int  @map("owner_id") /// 주인 아이디
    categoryId Int? @map("category_id") /// 카테고리 아이디
    tagId      Int? @map("tag_id") /// 태그 아이디

    createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(3) /// 생성일
    updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz(3) /// 수정일
    deletedAt DateTime? @map("deleted_at") @db.Timestamptz(3) /// 삭제일

    @@map("pet")
}
